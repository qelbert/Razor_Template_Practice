@using CodingEvents.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>


@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class = "table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Contact Email</th>
            <th>Category</th>
        </tr>
        <tr>

        @foreach (var meeting in Model)
        {
        <tr>
            <td>@meeting.Id</td>
            <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@meeting.Id">@meeting.Name</a></td>
            <td>@meeting.Description</td>
            <td>@meeting.ContactEmail</td>
            <td>@meeting.Category.Name</td>
        </tr>
        }
    </table>
}

<partial name="/Views/Shared/_LinkListPartial.cshtml" />

